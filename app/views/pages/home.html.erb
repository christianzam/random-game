<div class="w-1/2 flex items-center justify-center text-3xl text-red-900 py-5">RESULTADOS SEMANA <%= Date.today %></div>
<div class="flex items-center justify-center space-x-5 mb-10 px-5">
  <div class="w-full mt-10">
    <div class="relative overflow-x-auto rounded-lg">
      <table class="w-full text-xl text-left text-gray-500 dark:text-gray-400">
        <thead class="text-xl text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
          <tr>
            <th scope="col" class="px-6 py-3"></th>
            <th scope="col" class="px-6 py-3">Lugar</th>
            <th scope="col" class="px-6 py-3">Puntos</th>
            <th scope="col" class="px-6 py-3">Promedio</th>
            <th scope="col" class="px-6 py-3">Empates</th>
            <th scope="col" class="px-6 py-3">Juegos</th>
            <th scope="col" class="px-6 py-3">Canastas</th>

          </tr>
        </thead>
        <tbody>
          <% @users.each_with_index do |user, index| %>
              <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
                  <div class="flex items-center">
                    <%#= image_tag(image_path("#{user.name}.jpg"), class: "h-8 w-8 rounded-full", alt: "Avatar") %>
                    <span class="ml-2"><%= user.name %></span>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <%= total_place(user).ordinalize %> 
                  <% if index.zero? %> 
                    ðŸ¥‡
                  <% elsif index == 1 %>
                    ðŸ¥ˆ
                  <% elsif index == 2 %>
                    ðŸ¥‰
                  <% end %>
                </td>
                <td class="px-6 py-4">
                  <%= total_points(user) %>
                </td>
                <td class="px-6 py-4">
                  <div class="mb-1 text-base font-medium dark:text-white"><%= score_avrg(user) %>%</div>
                  <div class="w-full bg-gray-200 rounded-full h-2.5 mb-4 dark:bg-gray-700">
                    <div class="bg-<%=bar_color(user)%>-600 h-2.5 rounded-full dark:bg-<%=bar_color(user)%>-500" style="width: <%= score_avrg(user)%>%"></div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <%= total_draws(user) %>
                </td>
                <td class="px-6 py-4">
                  <%= total_matches(user) %>
                </td>
                <td class="px-6 py-4">
                  <%= total_matches(user) %>
                </td>                
              </tr>
          <% end %>
        </tbody>
      </table>
    </div> 
  </div>

  <div class="w-full flex items-center justify-center">
