<div class="bg-green-900 min-h-screen flex items-center justify-center px-4 sm:px-6 lg:px-8 py-5 sm:py-7 lg:py-9">
  <div class="max-w-md w-full space-y-8 bg-white rounded-lg shadow-xl p-6">
    <h2 class="flex justify-center text-2xl font-bold text-dark mt-0">Editar</h2>
    
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "space-y-6"}) do |f| %>
      <%= f.error_notification %>

      <div class="grid grid-cols-2 gap-4">
        <div>
          <%= f.input :nick_name, required: true, label: "Nickname", input_html: { class: "block w-full rounded-md border-gray-300 shadow-sm p-2" } %>
        </div>

        <div>
          <%= f.input :email, required: true, label: "Email", input_html: { class: "block w-full rounded-md border-gray-300 shadow-sm p-2" } %>
        </div>

        <div>
          <%= f.input :current_password, required: true, label: "Current Password", input_html: { class: "block w-full rounded-md border-gray-300 shadow-sm p-2" } %>
        </div>

        <div class="col-span-2">
          <%= f.input :profile_pic, as: :file, label: "Profile Picture", input_html: { class: "block w-full" } %>
        </div>
      </div>

      <% if resource.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(resource.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% resource.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="col-span-2">
        <%= f.button :submit, "Editar", class: "bg-red-900 flex w-full justify-center rounded-md px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-grey-100 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
      </div>
    <% end %>
  </div>
</div>
