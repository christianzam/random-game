<div class="flex justify-center">
  <div class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
      <%= simple_form_for @tournament, url: tournaments_path, html: { class: "space-y-6" } do |form| %>
        <h5 class="text-xl font-medium text-gray-900 dark:text-white">Crea un torneo nuevo</h5>
        <div>
          <label for="start_date" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
            Cuando comienza
          </label>
          <%= form.input :start_date, label: false, input_html: { class: 'rounded-lg', type: 'date' } %>
            
        </div>
        <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Crear</button>
      <% end %>
  </div>
</div>
