<turbo-frame id="tournament-new">
  <div class="flex justify-center">
    <div class="w-full max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
        <%= simple_form_for @tournament, url: tournaments_path, html: { class: "space-y-6" } do |form| %>
          <h5 class="text-xl font-medium text-gray-900 dark:text-white">Crea un torneo nuevo</h5>
          <div>
            <label for="name" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
              Nombre del torneo
            </label>
            <%= form.input :name, label: false, input_html: { class: 'rounded-lg', type: 'text' } %>
          </div>
          <div>
            <label for="start_date" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
              Comienza
            </label>
            <%= form.input :start_date, label: false, input_html: { class: 'rounded-lg', type: 'date' } %>
          </div>
          <div>
            <label for="start_date" class="block mb-2 text-sm font-medium text-gray-900 dark:text-white">
              Termina
            </label>
            <%= form.input :end_date, label: false, input_html: { class: 'rounded-lg', type: 'date' } %>
          </div>
          <div>
            <label class="relative inline-flex items-center cursor-pointer">
              <%= form.check_box :period_tournament, label: false, type: 'checkbox', class: 'sr-only peer', value:'' %>
              <div class="w-11 h-6 bg-gray-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 dark:peer-focus:ring-blue-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all dark:border-gray-600 peer-checked:bg-blue-600"></div>
              <span class="ml-3 text-sm font-medium text-gray-900 dark:text-gray-300">Torneo temporada?</span>
            </label>
          </div>
          <button type="submit" class="w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Crear</button>
        <% end %>
    </div>
  </div>
</turbo-frame>
