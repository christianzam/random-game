<div class="flex justify-center px-5">
  <div class="w-full text-center bg-white border border-gray-200 rounded-lg shadow sm:p-8 dark:bg-gray-800 dark:border-gray-700">
    <h5 class="mb-2 text-3xl font-bold text-gray-900 dark:text-white"><%= tournament_name(@game) %></h5>
    <p class="mb-5 text-base text-gray-500 sm:text-lg dark:text-gray-400"><%= @game.date.strftime("%A %d %B %Y") %> </p>

    <div class="flex items-center justify-center bg-gray-300">
      <div class="w-1/2 mt-5">
        <div class="relative overflow-x-auto">
          <% if @game %>
            <table class="w-full text-sm text-left text-gray-500 dark:text-gray-400">
              <thead class="text-xs text-gray-700 uppercase bg-gray-50 dark:bg-gray-700 dark:text-gray-400">
                  <tr>
                    <th scope="col" class="px-6 py-3"></th>
                    <th scope="col" class="px-6 py-3">Puntos</th>
                    <th scope="col" class="px-6 py-3">Empate</th>
                    <th scope="col" class="px-6 py-3">Empate Ganado</th>
                    <th scope="col" class="px-6 py-3">Lugar</th>
                  </tr>
              </thead>
              <tbody>
                <% @game.player_game_results.order(points: :desc).each.with_index(1) do |player_game_result, index| %>
                  <% bg_color = index.odd? ? 'bg-blue-100' : '' %>
                  <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
                    <td scope="row" class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white <%= bg_color %>">
                      <%= player_game_result.user.name %>
                    </td>
                    <td class="px-6 py-4 <%= bg_color %>">
                      <%= player_game_result.points %>
                    </td>
                    <td class="px-6 py-4 <%= bg_color %>">
                      <%= boolean_answer player_game_result.draw %>
                    </td>
                    <td class="px-6 py-4 <%= bg_color %>">
                      <%= boolean_answer player_game_result.win_by_draw %>
                    </td>
                    <td class="px-6 py-4 <%= bg_color %>">
                      <%= places_icons index %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
            <div class="flex justify-center my-3">
              <span>
                <%= link_to 'Editar', edit_game_path(@game), class: "text-black text-md font-medium" %>
              </span>
              <span>
                <svg class="w-3 h-7 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
              </span>
            </div>
          <% else %>
            <div class="flex items-center justify-center mb-5 text-red-900 text-2xl font-bold leading-9 tracking-tight">
              Aun no hay partida
            </div>
            <div class="flex justify-center">
              <%= link_to new_game_path, class: "inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" do %>
                Crear partida
                <svg class="w-3.5 h-3.5 ml-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 10">
                  <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5h12m0 0L9 1m4 4L9 9"/>
                </svg>
              <% end %>
            </div>
          <% end %>
        </div>      
      </div>
    </div>    
  </div>
</div>
